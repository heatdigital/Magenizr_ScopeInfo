<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="magenizr_scopeinfo" translate="label" type="text" sortOrder="1000" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <label>Scope Info</label>
                <field id="enabled" translate="label,comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Disable the module temporarily. Default: No]]></comment>
                </field>

                <field id="display_options" translate="label,comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Display Options</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[Display Scope Info by default without having to click on the link. Default: Yes]]></comment>
                </field>
            </group>

        </section>
    </system>
</config>
